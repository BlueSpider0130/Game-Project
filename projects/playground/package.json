{
    "name": "playground",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "npm run start:app:playground",
        "serve": "ng serve --port=4200",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "lint": "ng lint --format table",
        "rimraf": "rimraf",
        "run-s": "run-s",
        "wait-for": "node ../../scripts/wait-for.js",
        "run-ask": "node ../../scripts/run-ask.js",
        "run-arg": "node ../../scripts/run-arg.js",
        "NO:COMMAND:SCRIPTS:SECTION": "----------------------------------SCRIPTS SECTION----------------------------------------------",
        "start:app:playground": "npm-run-all clean:lib:shared --parallel \"watch:lib:shared\" \"run-s wait-for:lib:shared serve:app:playground",
        "serve:app:playground": "npm run serve",
        "build:app:playground": "run-s \"build -- --project=playground\"",
        "watch:app:playground": "run-s \"watch -- --project=playground\"",
        "lint:app:playground": "run-s \"lint playground\"",
        "test:app:playground": "run-s \"test playground\"",
        "storybook:app:playground": "run-s \"ng run playground:storybook\"",
        "storybook-build:app:playground": "run-s \"ng run playground:build-storybook\"",
        "clean:app:playground": "run-s \"rimraf ../../dist/playground\"",
        "wait-for:app:playground": "run-s \"wait-for ../../dist/playground\"",
        "NO:COMMAND:DEPENDENCIES:SECTION": "-----------------------------DEPENDENCIES SECTION-----------------------------------------",
        "clean:lib:shared": "npm run clean:lib:shared --prefix=../itdl/shared",
        "wait-for:lib:shared": "npm run wait-for:lib:shared --prefix=../itdl/shared",
        "watch:lib:shared": "npm run watch:lib:shared --prefix=../itdl/shared"
    }
}
